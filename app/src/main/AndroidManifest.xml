<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="www.softedgenepal.com.softedgenepalschool">

    <application
        android:allowBackup="true"
        android:configChanges="layoutDirection|locale"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme_NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".View.Activities.VideosActivity"></activity>
        <activity android:name=".View.Activities.Teacher.TeacherClassRoutinev2Activity" />
        <activity
            android:name=".View.Activities.Teacher.TeacherClassRoutineActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".View.Activities.Teacher.TeacherProfileActivity" />
        <activity
            android:name=".View.Activities.Teacher.LeaveApplication.ShowTeacherLeaveAppDetailActivity"
            android:theme="@style/AppTheme.AlertDialogue" />
        <activity android:name=".View.Activities.Teacher.LeaveApplication.CreateTeacherLeaveAppActivity" />
        <activity
            android:name=".View.Activities.Teacher.LeaveApplication.EditTeacherLeaveAppActivity"
            android:parentActivityName=".View.Activities.MainActivity" />
        <activity
            android:name=".View.Activities.Teacher.LeaveApplication.ShowTeacherLeaveAppActivity"
            android:parentActivityName=".View.Activities.MainActivity" />
        <activity android:name=".View.Activities.Teacher.TeacherAttendance" />
        <activity android:name=".View.Activities.Teacher.HomeWork.ShowTeacherHomeWork" />
        <activity android:name=".View.Activities.Teacher.HomeWork.CreateTeacherHomeWrok" />
        <activity android:name=".View.Activities.Teacher.HomeWork.EditTeacherHomework" />
        <activity android:name=".View.Activities.Student.ReportCardActivity" />
        <activity
            android:name=".View.Activities.Student.ReportCardDetailActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".View.Activities.ScanActivity" /> <!-- for cleartext http traffic -->
        <activity
            android:name=".View.Activities.RunTimePermissions"
            android:theme="@style/AppTheme_Permission" />
        <activity android:name=".View.Activities.Student.AttendanceActivity" />
        <activity android:name=".View.Activities.Student.RoutineActivity" />
        <activity android:name=".View.Activities.Student.BusRouteActivity" />
        <activity android:name=".View.Activities.Student.ShowInMapActivity" />
        <activity android:name=".View.Activities.Student.HomeWorkActivity" />
        <activity android:name=".View.Activities.EventActivity" />
        <activity android:name=".View.Activities.AboutActivity" />
        <activity android:name=".View.Activities.LeaveApplication.ShowAllLeaveApplicationDetailViewActivity" />
        <activity android:name=".View.Activities.SuggestionActivity" /> <!-- android:hardwareAccelerated="true"> -->
        <activity android:name=".View.Activities.Student.ProfileActivity" />
        <activity android:name=".View.Activities.LeaveApplication.ShowAllLeaveApplication" />
        <activity android:name=".View.Activities.LeaveApplication.LeaveApplicationActivity" />
        <activity android:name=".View.Activities.MainActivity" />
        <activity android:name=".View.Activities.SettingActivity" />
        <activity android:name=".View.Activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service android:name=".AppCustomPackages.Notifications.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".AppCustomPackages.Notifications.GetDeviceTokenService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
    </application>

    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />

</manifest>