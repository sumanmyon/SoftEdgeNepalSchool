<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/backgroundLight</item>

        <item name="android:fontFamily">@font/font</item><!-- Apply custom font to whole app -->
        <item name="android:textColor">@color/backgroundLight</item><!-- popup menu text color          //-->
        <item name="android:itemBackground">@color/colorPrimaryDark</item> <!-- popup menu background   //-->
        <item name="actionButtonStyle">@style/AppTheme.Widget.ActionButton</item><!-- toolbar cap disabling -->

        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme_NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/font</item><!-- Apply custom font to whole app -->
        <item name="android:textColor">@color/backgroundLight</item> <!-- popup menu text color         //-->
        <item name="android:itemBackground">@color/colorPrimaryDark</item><!-- popup menu background    //-->
        <item name="actionButtonStyle">@style/AppTheme.Widget.ActionButton</item><!-- toolbar cap disabling -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/backgroundLight</item>
        <item name="colorError">@color/backgroundLight</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <!--style for ripple library-->
    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>

    <style name="RippleStyleDark" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#80000000</item>
    </style>

    <!-- toolbar :: custom -->
    <style name="MyToolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <!--<item name="navigationIcon">@drawable/menu_icon_black</item>-->
        <item name="android:background">?colorPrimary</item>

    </style>

    <style name="MyToolbar2">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:background">?colorPrimary</item>

    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textSize">18sp</item>
        <!--<item name="android:shadowDx">1</item>-->
        <!--<item name="android:shadowDy">1</item>-->
        <!--<item name="android:shadowRadius">background_img</item>-->
        <!--<item name="android:shadowColor">?colorAccent</item>-->
    </style>

    <style name="ToolbarTextAppearance.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolbarTextAppearance.Subtitle">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- toolbar cap disabling -->
    <style name="AppTheme.Widget.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
    </style>
    
    <!-- For TabLayout -->
    <style name="CustomTabIndicatorStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
    </style>

    <!-- Custom Popup menu -->
    <style name="AppTheme.Custom"
        parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/colorAccent</item> <!-- Whatever color you want-->
    </style>

    <!--
        AlertDialogTheme
    -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <!--buttons color-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/backgroundLight</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <!--dialog background-->
        <!--<item name="android:windowBackground">@drawable/background_dialog</item>-->
        <!--<item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>-->
        <!--<item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>-->
    </style>

