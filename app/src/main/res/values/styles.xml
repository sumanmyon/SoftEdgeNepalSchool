<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/font</item><!-- Apply custom font to whole app -->
        <item name="android:textColor">@color/colorPrimaryText</item><!-- popup menu text color -->
        <item name="android:itemBackground">@color/colorPrimary</item> <!-- popup menu background -->
        <item name="actionButtonStyle">@style/AppTheme.Widget.ActionButton</item><!-- toolbar cap disabling -->
    </style>

    <style name="AppTheme_NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/font</item><!-- Apply custom font to whole app -->
        <item name="android:textColor">@color/colorPrimaryText</item> <!-- popup menu text color -->
        <item name="android:itemBackground">@color/colorPrimary</item><!-- popup menu background -->
        <item name="actionButtonStyle">@style/AppTheme.Widget.ActionButton</item><!-- toolbar cap disabling -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- toolbar :: custom -->
    <style name="MyToolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="navigationIcon">@drawable/menu_icon2</item>
        <item name="android:background">?colorPrimary</item>

    </style>

    <style name="MyToolbar2">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:background">?colorPrimary</item>

    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textSize">18sp</item>
        <!--<item name="android:shadowDx">1</item>-->
        <!--<item name="android:shadowDy">1</item>-->
        <!--<item name="android:shadowRadius">2</item>-->
        <!--<item name="android:shadowColor">?colorAccent</item>-->
    </style>

    <style name="ToolbarTextAppearance.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolbarTextAppearance.Subtitle">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- toolbar cap disabling -->
    <style name="AppTheme.Widget.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
    </style>
    
    <!-- For TabLayout -->
    <style name="CustomTabIndicatorStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
    </style>

    <!-- Custom Popup menu -->
    <style name="AppTheme.Custom"
        parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>


</resources>
