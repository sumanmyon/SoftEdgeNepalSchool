<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="1dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/assignment_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="2dp"
                    android:text="Ghyaipo Lhoshar"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/large"/>

                <TextView
                    android:id="@+id/assignment_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.5"
                    android:gravity="right|bottom"
                    android:padding="2dp"
                    android:text="date"
                    android:textSize="@dimen/small" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="@dimen/small"
            android:layout_height="20sp"
            android:layout_weight="0.2" />

        <ImageButton
            android:id="@+id/assignment_expand"
            android:layout_width="@dimen/dp32"
            android:layout_height="@dimen/dp32"
            android:layout_weight="0.4"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/grey_60"
            app:srcCompat="@drawable/download_file" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_expand"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/vvsmall"
        android:background="@color/grey_3"
        android:orientation="vertical"
        android:visibility="gone">

        <!--<TextView-->
            <!--android:id="@+id/assignment_message"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="message"-->
            <!--android:textSize="@dimen/medium" />-->

        <WebView
            android:id="@+id/assignment_homeWorkWebView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </WebView>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/bck"
        android:layout_gravity="start"
        android:layout_marginBottom="2dp"
        android:background="@color/colorPrimaryDark" />
</LinearLayout>