<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/bck"
        style="@style/RippleStyleBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="@dimen/dp42"
                android:layout_height="@dimen/dp42"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_directions_bus" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/busRoute_RouteName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:padding="2dp"
                    android:text="chakrapath-tinkune"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/large" />
                <TextView
                    android:id="@+id/assignment_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.5"
                    android:gravity="start"
                    android:padding="3dp"
                    android:text="Route"
                    android:textColor="@color/grey_60"
                    android:textSize="@dimen/small" />
            </LinearLayout>
        </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>

    <Button
        android:id="@+id/assignment_list_vertical_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/bck"
        android:layout_gravity="start"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/grey_10" />
</LinearLayout>