<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:contentPadding="2dp">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/show_leave_app_recycle_cardView"
            style="@style/RippleStyleBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/show_leave_app_recycle_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Application for leave due to sickness"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/blue_grey_500" />

                <TextView
                    android:id="@+id/show_leave_app_recycle_createDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:padding="2dp"
                    android:text="Created Date"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/show_leave_app_recycle_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:padding="4dp"
                    android:text="Message"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/show_leave_app_recycle_isActive"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="end"
                    android:text="Canceled"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    android:textStyle="italic" />

            </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/show_leave_app_recycle_cardView"
        android:background="@color/grey_10" />
</RelativeLayout>
