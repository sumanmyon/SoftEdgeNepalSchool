<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/show_leave_app_recycle_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="10dp">
        <!--app:cardBackgroundColor="@color/colorPrimary">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/show_leave_app_recycle_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Application for leave due to sickness"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textStyle="bold" />
            <Button
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_gravity="start"
                android:background="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/show_leave_app_recycle_createDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Created Date"
                    android:gravity="end"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="10sp"
                    android:padding="2dp"
                    android:layout_weight="0.5"/>
            <!--<TextView-->
                <!--android:id="@+id/show_leave_app_recycle_from_to"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="From: 12/3/2075\nTo: 14/3/2075"-->
                <!--android:textColor="@color/colorPrimaryText"-->
                <!--android:textSize="12sp"-->
                <!--android:layout_marginTop="12dp"-->
                <!--android:padding="4dp"/>-->

            <TextView
                android:id="@+id/show_leave_app_recycle_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textColor="@color/colorPrimaryText"
                android:textSize="12sp"
                android:padding="8dp"
                android:maxLines="2"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/show_leave_app_recycle_isActive"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Canceled"
                android:textStyle="italic"
                android:gravity="end"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
