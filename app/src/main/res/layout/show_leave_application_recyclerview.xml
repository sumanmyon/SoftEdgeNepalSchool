<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/show_leave_app_recycle_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:contentPadding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="vertical">
            <!--android:id="@+id/show_leave_app_recycle_cardView">-->
            <TextView
                android:id="@+id/show_leave_app_recycle_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Application for leave due to sickness"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:padding="4dp"
                android:textStyle="bold" />
            <Button
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="start"
                android:background="@color/blue_grey_500"/>
            <TextView
                android:id="@+id/show_leave_app_recycle_createDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Created Date"
                android:gravity="end"
                android:textColor="@color/colorPrimaryText"
                android:textSize="12sp"
                android:padding="2dp"
                android:layout_weight="0.5"/>

            <TextView
                android:id="@+id/show_leave_app_recycle_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textColor="@color/colorPrimaryText"
                android:textSize="14sp"
                android:padding="4dp"
                android:maxLines="4"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/show_leave_app_recycle_isActive"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Canceled"
                android:textStyle="italic"
                android:gravity="end"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_below="@+id/show_leave_app_recycle_cardView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_10" />
</RelativeLayout>
