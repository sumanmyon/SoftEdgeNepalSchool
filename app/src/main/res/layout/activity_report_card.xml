<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activities.ReportCardActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginBottom="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/reportCard_bt_close"
                        style="@style/RippleStyleBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true">
                        <ImageButton
                            android:layout_width="?attr/actionBarSize"
                            android:layout_height="?attr/actionBarSize"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:tint="@android:color/white"
                            app:srcCompat="@drawable/ic_back" />
                    </com.balysv.materialripple.MaterialRippleLayout>

                    <View
                        android:layout_width="30dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/reportCard_toolbar"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/ReportCard"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </android.support.design.widget.AppBarLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/terminalTextView"
                android:layout_below="@+id/app_bar_layout"
                android:text="First Terminal Exam"
                android:textColor="@color/colorPrimaryText"
                android:gravity="center"
                android:layout_margin="12dp"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

            <LinearLayout
                android:id="@+id/lyl"
                android:layout_below="@+id/terminalTextView"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include
                    layout="@layout/reportcard_recyclerview_title"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/reportCard_recyclerView"
                    android:layout_below="@+id/app_bar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">
                </android.support.v7.widget.RecyclerView>
                <include
                    layout="@layout/reportcard_recyclerview_total"/>
            </LinearLayout>

            <include
                layout="@layout/report_card_pass_fail"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_width="150dp"
                android:layout_below="@+id/lyl"
                android:layout_marginTop="@dimen/dp42"
                android:layout_marginRight="16dp" />

        </RelativeLayout>
    </ScrollView>


    <TextView
        android:id="@+id/reportCard_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:padding="4dp" />
    <ProgressBar
        android:id="@+id/reportCard_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="4dp"
        style="@android:style/Widget.Holo.ProgressBar"
        android:indeterminate="false"
        android:layout_centerInParent="true" />

</RelativeLayout>