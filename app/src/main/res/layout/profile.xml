<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userProfile_relativeLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@color/colorPrimary">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:padding="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/userprofile4"
            app:civ_circle_background_color="@color/backgroundLight"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorPrimaryText"
            android:id="@+id/userProfile_ImageView"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: Suman Neupane"
                android:textColor="@color/colorPrimaryText"
                android:textSize="12sp"
                android:padding="2dp"
                android:id="@+id/userProfile_nameTextView"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Class: 7(A)"
                android:textColor="@color/colorPrimaryText"
                android:textSize="12sp"
                android:padding="2dp"
                android:id="@+id/userProfile_classTextView"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Roll No.: 12"
                android:textColor="@color/colorPrimaryText"
                android:textSize="12sp"
                android:padding="2dp"
                android:id="@+id/userProfile_Roll_SubjectTextView"/>
        </LinearLayout>
    </LinearLayout>

    <!--<include layout="@layout/progress_bar" />-->
    <!--<android.support.v7.widget.CardView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerInParent="true"-->
    <!--app:cardCornerRadius="50dp"-->
    <!--app:cardElevation="2dp"-->
    <!--android:backgroundTint="@android:color/transparent">-->
    <!--android:backgroundTint="@android:color/transparent">-->
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="4dp"
        style="@android:style/Widget.Holo.ProgressBar"
        android:id="@+id/profile_progress_bar"
        android:indeterminate="true"
        android:theme="@style/ProgressBar">
    </ProgressBar>
    <!--</android.support.v7.widget.CardView>-->

</RelativeLayout>


